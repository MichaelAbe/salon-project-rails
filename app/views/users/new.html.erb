<h1>Signup</h1>

<%= form_for @user, url: signup_path do |f| %>
    <div class="input-field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
    </div>
    <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>
    <%= f.submit "Signup" %>
<% end %>