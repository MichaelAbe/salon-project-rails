<h3>Login</h3>

<%= form_tag login_path do %>
    <div class="input-field">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil,  autofocus: true%>
    </div>
    <div class="input-field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Login" %>
<% end %>