<h1>New Employee Appointment</h1>

<%= form_for [@employee, @appointment] do |f| %>
    <%= f.hidden_field :employee_id, value: @employee.id %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div> 
    <div>   
        <%= f.label :appointment_date %>
        <%= f.datetime_field :appointment_date %>
    </div>

    

    <%= f.submit "Schedule Appointment" %>

<% end %>
