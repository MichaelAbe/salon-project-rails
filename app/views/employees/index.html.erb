<div class="row">
    <div class="col s4 m4">
<% @employees.each do |employee|%>
      <div class="card">
        <div class="card-image">
          <img src=<%= employee.picture %>>
          <span class="card-title"><%= employee.first_name %></span>
        </div>
        <div class="card-content">
          <p><%= employee.bio %></p>
        </div>
        <div class="card-action">
          <p class="text-black"><%= link_to "Schedule an appointment with " + employee.first_name , new_employee_appointment_path(employee) %></p>
        </div>
      </div>
<% end %>
    </div>
  </div>
</div>
